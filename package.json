{
  "name": "simple-svelte-autocomplete",
  "version": "2.4.0",
  "description": "Autocomplete / Select / Typeahead component made with Svelte 3",
  "svelte": "src/SimpleAutocomplete.svelte",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jest": "^27.4.1",
    "babel-jest": "^27.0.6",
    "bulma": "^0.9.3",
    "jest": "^27.0.0",
    "jest-dom": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "~6.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.24.0",
    "svelte-highlight": "^6.0.1",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.7.4",
    "ts-jest": "^27.1.4",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "autobuild": "rollup -c rollup.dev.config.js -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "test": "jest",
    "prettier": "prettier --write public src",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pstanoev/simple-svelte-autocomplete"
  },
  "keywords": [
    "svelte",
    "autocomplete",
    "svelte3",
    "svelte-components",
    "autocomplete",
    "auto complete",
    "autosuggest",
    "auto suggest",
    "typeahead",
    "type ahead"
  ],
  "files": [
    "src",
    "index.mjs",
    "index.js"
  ],
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "pluginSearchDirs": [
      "."
    ]
  }
}
